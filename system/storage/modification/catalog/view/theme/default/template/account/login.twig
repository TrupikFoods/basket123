<script type="text/javascript">
var interval;
	function param(name) {
	return (parent.location.search.split(name + '=')[1] || '').split('&')[0];
	}
$(window).on('load', function() {
$('input[type=radio][name=account]').on('change', function () {
setTimeout( function(){ 
